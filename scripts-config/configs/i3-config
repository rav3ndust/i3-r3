# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	# uncomment the below if we want i3bar on top.
	position top	
    	status_command i3status
	# font choices we like - Ubuntu, Inter, Noto Sans, and Cantarell.
	# both are nice and readable in wired.
	# use the font of your choice by commenting/uncommenting them.
	#font pango:Ubuntu 10
	#font pango:Cantarell 10
	#font pango:Inter 10
	#font pango:ubuntu-title 11 
	font pango:Quicksand Bold 10 
	colors {
		focused_workspace #ff10f0 #000000 #39FF14
		inactive_workspace #000000 #000000 #ff3131
		separator #ff10f0
		statusline #ff10f0 
	}
}

